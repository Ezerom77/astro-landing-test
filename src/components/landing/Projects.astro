---
import { projects } from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-8 text-center">Projects</h2>
<section>
  {
    projects.map((project) => (
      <div class=" flex flex-col mb-2 text-center md:text-left md:flex-row">
        <div class=" flex-1 gap-y-3 ">
          <h2 class="font-bold text-2xl my-4">{project.title}</h2>
          <p class=" my-2">{project.description}</p>
          <button class=" bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
            More info
          </button>
        </div>
        <div class=" flex-1">
          <img class=" w-72 h-auto" src={project.image} alt={project.title} />
        </div>
      </div>
    ))
  }
</section>
